<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Graduation_project.Login"
             Title="Welcome"
             Shell.FlyoutBehavior="Disabled">
    <ScrollView>
        <StackLayout Padding="40" Orientation="Vertical" HorizontalOptions="Center" >
            
                 

                    <VerticalStackLayout Margin="10">
                        <Label Text="Email Adress"/>
                        <Entry  x:Name="logemail" WidthRequest="300" Keyboard="Email"/>
                    </VerticalStackLayout>


                    <VerticalStackLayout Margin="10">
                        <Label Text="Password"/>
                <Entry  x:Name="logpassword" WidthRequest="300" IsPassword="True" ClearButtonVisibility="WhileEditing" />
                    </VerticalStackLayout>


                <Button x:Name="Login_Button" Text="Sign In"  WidthRequest="100" Clicked="Login_Button_Clicked"/>

            <HorizontalStackLayout>
                <Label Text="Didn't you register?" Margin="10"/>
                <Button x:Name="Reg_nav" Text="Sign Up"  WidthRequest="100" BorderColor="White" BackgroundColor="White" TextColor="Purple" Clicked="Reg_nav_Clicked"/>

            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>